find . -name "*gz" |grep -v '\._'|grep 1.fq.gz |sort > 1    #多文件查找时关键字必须加""
find . -name "*gz" |grep -v '\._'|grep 2.fq.gz |sort > 2
paste 1 2 > config

cat config |while read id
do
arr=(${id})
fq1=${arr[0]}
fq2=${arr[1]}
echo $dir $fq1 $fq2
nohup cutadapt -a AGATCGGAAGAGCACACGTCTGAACTCCAGTCAC -A AGATCGGAAGAGCGTCGTGTAGGGAAAGAGTGT -u 0 -u -10 -U 0 -U -10 -m 30 -o $fq1.R1.fastq -p $fq2.R2.fastq $fq1 $fq2 -j 5 &
done

